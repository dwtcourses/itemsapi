<div class="col-md-2" style="padding-left: 0;">
  {% include "views/partials/aggregations.html.twig" ignore missing %}
</div>

<div class="col-md-10">

  <div class="clearfix"></div>

  <div class="pull-right" style="margin-bottom: 10px; margin-right: 15px;">
    <select id="select_per_page" name="select_per_page" class="form-control pull-left" style="width: auto; margin-top: 0px;">
      <option value="">Items per page</option>
      {% for v in [10, 15, 30, 50, 100, 500, 1000] %}
      <option {% if pagination.per_page == v %}selected{% endif %} value="{{ v }}">{{ v }}</option>
      {% endfor %}
    </select>

    {% if user and user.atLeastPackage('standard') %}
    <select id="select_sorting" name="select_sorting" class="form-control pull-left" style="width: auto; margin-top: 0px; margin-left: 10px;">
      <option value="">Select sorting option</option>
      {% for v in sortings %}
      <option {% if v.name == sort %}selected{% endif %} value="{{ v.name }}">{{ v.title }}</option>
      {% endfor %}
    </select>
    {% endif %}
  </div>


  <div class="clearfix"></div>

  <div class="breadcrumbs" style="margin: 0 15px 20px 15px;">
    {% include "views/partials/breadcrumbs.html.twig" ignore missing %}
  </div>

  <div class="clearfix"></div>

  <div class="items">

    <div class="col-md-12">
    <table class="table table-striped table-items" data-id="{{ row.id }}">
    <thead>
      <tr>
        <th>
        </th>
      </tr>
    </thead>
      <tbody>
      {% for item in items %}

      <tr>
        <td>
          {{ item | dump  }}
        </td>
      </tr>

      {% endfor %}

      </tbody>
    </table>
    </div>

  </div>

  <div class="clearfix"></div>

  {#{% include "views/pagination.html.twig" ignore missing %}#}
  <div class="text-center">
  </div>

</div>
