<div class="col-md-12" style="padding-left: 0; padding-right: 0;">

  <form class="" id="search_form" role="search" style="margin-bottom: 15px; margin-top: 15px;">
    <div class="input-group">
      <input type="text" id="main_query" value="{{ query }}" class="form-control input-lg" placeholder="Search items.." name="query">
      <div class="input-group-btn">
        <button class="btn btn-default input-lg" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </div>
    </div>
  </form>

  <div class="clearfix"></div>

  <div class="breadcrumbs" style="margin: 0 0 10px 0; ">
    {% include "views/partials/breadcrumbs.html.twig" ignore missing %}
  </div>

  <div class="pull-right" style="margin-bottom: 10px;">
    <select id="select_per_page" name="select_per_page" class="form-control pull-left" style="width: auto; margin-top: 0px;">
      <option value="">Items per page</option>
      {% for v in [10, 15, 30, 50, 100, 500, 1000] %}
      <option {% if pagination.per_page == v %}selected{% endif %} value="{{ v }}">{{ v }}</option>
      {% endfor %}
    </select>
  </div>

  <div class="pull-right" style="margin-bottom: 10px; margin-right: 10px;">
    <select id="select_order" name="select_order" class="form-control pull-left" style="width: auto; margin-top: 0px;">
      <option value="">Order</option>
      {% for v in ['desc', 'asc'] %}
      <option {% if order == v %}selected{% endif %} value="{{ v }}">{{ v }}</option>
      {% endfor %}
    </select>
  </div>

  <div class="pull-right" style="margin-bottom: 10px; margin-right: 10px;">
    <select id="select_sorting" name="select_sorting" class="form-control pull-left" style="width: auto; margin-top: 0px;">
      <option value="">Sorting field</option>
      {% for v in sorting_fields %}
      <option {% if sort_field == v %}selected{% endif %} value="{{ v }}">{{ v }}</option>
      {% endfor %}
    </select>
  </div>

</div>


<div class="col-md-2" style="padding-left: 0;">
  {% include "views/partials/aggregations.html.twig" ignore missing %}
</div>

<div class="col-md-10" style="padding-right: 0;">

  <div class="clearfix"></div>

  <div class="items">

    <table class="table table-striped table-items" data-id="{{ row.id }}">
      <thead>
        <tr>
          <th>
          </th>
        </tr>
      </thead>
      <tbody>
        {% for item in items %}

        <tr>
          <td>
            {{ item | dump  }}
          </td>
        </tr>

        {% endfor %}

      </tbody>
    </table>
  </div>

  <div class="clearfix"></div>

  {#{% include "views/pagination.html.twig" ignore missing %}#}
  <div class="text-center">
  </div>

</div>
